<html>
<head>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="request">
    <h1><%= @dmp_request.name %></h1>
    <div id="request_content">
      Содержание сообщения: <br>
      <p class="dmp_content"><%= @dmp_request.content %></p>
      <hr>
      Параметры: <br>
      <br>
      <% @dmp_request.vk_attrs.delete_if{|k, v| v.blank?}.each do |k, v| %>
        <p><%= k %>: <%= v %></p>
      <% end %>
    </div>
    <br>
    <%= link_to "Edit", dmp_edit_path(@dmp_request.id) if dmp_admin_signed_in? %> 
    <%= link_to "Destroy", dmp_destroy_path(@dmp_request.id) if dmp_admin_signed_in? %>
  </div>
  <div id="vkusers">
    <%= link_to "Получить список отправки", dmp_show_vkusers_path(@dmp_request.id), :remote => true %>
    <!-- <%# @vkusers.each do |vkuser| %>
          <%#= link_to "http://vk.com/write#{vkuser.vkid}", "http://vk.com/write#{vkuser.vkid}", :target => "_blank" %><br>
        <%# end %> -->
  </div>
</body>
</html>