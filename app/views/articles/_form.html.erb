    <%= f.label :content %><br />
    <%#      = f.text_area :content %>
    <%= f.cktext_area :content, :toolbar => 'Full', :width => 800, :height => 400 %>
  </div>
  <div class = "field">
    <%= f.label :rating_id %><br />
